{
    "name": "omus",
    "version": "1.0.0",
    "private": true,
    "description": "OMUS â€” Monorepo powered by Turborepo (Next.js + NestJS)",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "dev:web": "turbo run dev --filter=@omus/web",
        "dev:api": "turbo run dev --filter=@omus/api",
        "build": "turbo run build",
        "build:web": "turbo run build --filter=@omus/web",
        "build:api": "turbo run build --filter=@omus/api",
        "start": "turbo run start",
        "start:web": "turbo run start --filter=@omus/web",
        "start:api": "turbo run start --filter=@omus/api",
        "lint": "turbo run lint",
        "format": "turbo run format",
        "test": "turbo run test",
        "clean": "turbo run clean",
        "postinstall": "npm exec --workspace=apps/api -- prisma generate --schema=./prisma/schema.prisma",
        "db:generate": "npm exec --workspace=apps/api -- prisma generate --schema=./prisma/schema.prisma",
        "db:push": "npm exec --workspace=apps/api -- prisma db push --schema=./prisma/schema.prisma"
    },
    "devDependencies": {
        "turbo": "^2.3.3",
        "prisma": "6.19.2"
    },
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=10.0.0"
    },
    "packageManager": "npm@10.0.0"
}