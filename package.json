{
  "name": "omus",
  "version": "1.0.0",
  "private": true,
  "description": "OMUS â€” Monorepo powered by Turborepo (Next.js + NestJS)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@omus/web",
    "dev:api": "turbo run dev --filter=@omus/api",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@omus/web",
    "build:api": "turbo run build --filter=@omus/api",
    "start": "turbo run start",
    "start:web": "turbo run start --filter=@omus/web",
    "start:api": "turbo run start --filter=@omus/api",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "migrate": "dotenv -e .env prisma migrate dev --schema=prisma/schema.prisma",
    "db:generate": "prisma generate --schema=apps/api/prisma/schema.prisma",
    "db:push": "prisma db push --schema=apps/api/prisma/schema.prisma",
    "db:studio": "prisma studio --schema=apps/api/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/swagger": "^11.2.6",
    "@prisma/client": "^6.19.2",
    "jose": "^6.1.3",
    "pg": "^8.18.0",
    "react-feather": "^2.0.10",
    "react-icons": "^5.5.0",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "prisma": "^6.19.2",
    "turbo": "^2.8.12"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.0.0"
}